; REQUIRES: regkeys, spirv-as, dg2-supported, llvm-15-or-older
; RUN: spirv-as --target-env spv1.4 -o %t.spv %s
; RUN: ocloc compile -spirv_input -file %t.spv -device dg2 -options " -igc_opts 'ShaderDumpTranslationOnly=1 EnableOpaquePointersBackend=0'" 2>&1 | FileCheck %s
               OpCapability Addresses
               OpCapability Kernel
               OpMemoryModel Physical32 OpenCL
               OpEntryPoint Kernel %1 "testPtrEquality"
               OpName %a "a"
               OpName %b "b"
       %void = OpTypeVoid
       %bool = OpTypeBool
       %float = OpTypeFloat 32
       %ptr = OpTypePointer UniformConstant %float
          %5 = OpTypeFunction %void %ptr %ptr
          %1 = OpFunction %void None %5
          %a = OpFunctionParameter %ptr
          %b = OpFunctionParameter %ptr
          %6 = OpLabel
          %7 = OpPtrEqual %bool %a %b
          %8 = OpPtrNotEqual %bool %a %b
               OpReturn
               OpFunctionEnd

; CHECK-LABEL: @testPtrEquality(
; CHECK: [[TMP0:%.*]] = ptrtoint float addrspace(2)* %a to i64
; CHECK: [[TMP1:%.*]] = ptrtoint float addrspace(2)* %b to i64
; CHECK: {{.*}} = icmp eq i64 [[TMP0]], [[TMP1]]
; CHECK: [[TMP2:%.*]] = ptrtoint float addrspace(2)* %a to i64
; CHECK: [[TMP3:%.*]] = ptrtoint float addrspace(2)* %b to i64
; CHECK: {{.*}} = icmp ne i64 [[TMP2]], [[TMP3]]


